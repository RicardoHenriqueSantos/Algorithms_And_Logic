programa {
  funcao inicio() {

    // DECLARAÇÃO DAS VARIÁVEIS
    inteiro num1, num2, soma

    // ENTRADA DE DADOS
    escreva("INSIRA O NÚMERO 1: ")
    leia(num1)
    escreva("INSIRA O NÚMERO 2: ")
    leia(num2)

    // PROCESSAMENTO DE DADOS
    soma = num1 + num2

    // SAÍDA DE DADOS
    escreva("\n")
    escreva("A SOMA DOS DOIS NÚMEROS É ",soma)
    escreva("\n")

  }
}
